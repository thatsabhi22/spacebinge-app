<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ui.SignUpActivity">

    <ImageView
        android:id="@+id/signup_app_icon_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:contentDescription="@string/app_icon_cd"
        android:src="@drawable/spacebinge_icon_full" />

    <ImageView
        android:id="@+id/signup_app_name_iv"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_below="@id/signup_app_icon_iv"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_icon_cd"
        android:src="@drawable/icon_text_full" />

    <Button
        android:id="@+id/google_sign_in_btn"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/btn_google_signin" />

</RelativeLayout>