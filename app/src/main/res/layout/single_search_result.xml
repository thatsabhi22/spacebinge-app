<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="@dimen/micro_dim"
    card_view:cardBackgroundColor="@color/colorAccent"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/search_result_thumbnail_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/search_result_image_view_cd"
            android:scaleType="centerCrop"
            android:src="@drawable/globe_loading" />

        <TextView
            android:id="@+id/search_result_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="#66FF0000"
            android:gravity="end"
            android:paddingStart="@dimen/tens_dim"
            android:paddingTop="@dimen/tens_dim"
            android:paddingEnd="@dimen/twenties_dim"
            android:paddingBottom="@dimen/tens_dim"
            android:text="@string/search_result_title"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white"
            android:textSize="@dimen/standard_font_size"
            android:textStyle="normal|bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
