<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.udacity.spacebinge">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SpaceBinge"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.NewsActivity"></activity>
        <activity android:name=".ui.SearchActivity" />
        <activity android:name=".ui.WatchListActivity" />
        <activity android:name=".ui.PlayerActivity" />
        <activity android:name=".ui.SubscriptionLoginActivity" />
        <activity android:name=".ui.SplashActivity" />
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>